@model List<Core.DTO.RestaurantDTO>
<div class="MenuCards">
    <div class="container">
        <div class="row">
            @if (Model.Count() != 0)
            {
                @foreach (var Restaurant in Model)
                {


                    <div class="col pr-md-0 AddMrBottom">
                        <div class="card" style="width: 100%;">
                            <img class="card-img-top" src="img/food1.jfif" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">@Restaurant.Name</h5>
                                <p class="card-text">@Restaurant.Description</p>
                                <a href="/Restaurant/RestaurantDetails/@Restaurant.Id" class="MenuLink">Menu <i class="fas fa-angle-double-right"></i></a>
                            </div>
                        </div>
                    </div>

                }
            }
            else
            {
                <div class="col pr-md-0 AddMrBottom">
                    <div class="card" style="width: 100%;">
                        <p>No Restaurant Founds</p>
                        </div>
                </div>
            }
        </div>
    </div>
</div>

